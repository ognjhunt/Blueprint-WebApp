rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        (request.auth.token.admin == true ||
         request.auth.token.email in ['ohstnhunt@gmail.com', 'ops@tryblueprint.io']);
    }

    function isStringField(field) {
      return field is string;
    }

    function hasValidSceneCreatePayload() {
      return isStringField(request.resource.data.id)
        && isStringField(request.resource.data.name)
        && isStringField(request.resource.data.title)
        && isStringField(request.resource.data.status)
        && isStringField(request.resource.data.source)
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp;
    }

    match /contactRequests/{id} {
      allow read: if isAdmin();
      allow create, update, delete: if false;
    }

    // Inbound requests collection - lead pipeline
    // Writes are only allowed via server-side (Admin SDK)
    // Reads are restricted to admin users
    match /inboundRequests/{requestId} {
      allow read: if isAdmin();
      allow write: if false; // Server-side only via Admin SDK

      // Notes subcollection
      match /notes/{noteId} {
        allow read: if isAdmin();
        allow write: if false; // Server-side only via Admin SDK
      }
    }

    // Lead routing configuration - admin only
    match /leadRoutingConfig/{ruleId} {
      allow read, write: if isAdmin();
    }

    match /waitlistTokens/{id} {
      allow read, write: if false;
    }

    match /scenes/{id} {
      allow create: if isAuthenticated() && hasValidSceneCreatePayload();
      allow read: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    match /users/{userId} {
      allow create, read, update: if isAuthenticated() && request.auth.uid == userId;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
